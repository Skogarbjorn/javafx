    <Rectangle fx:id="fxRectangle" fill="red" height="100" width="100" layoutX="200" layoutY="200" />
   <Polygon fx:id="fxPolygon" fill="DODGERBLUE" stroke="BLACK" strokeType="INSIDE" layoutX="100" layoutY="300">
     <points>
       <Double fx:value="-50.0" />
       <Double fx:value="40.0" />
       <Double fx:value="50.0" />
       <Double fx:value="40.0" />
       <Double fx:value="0.0" />
       <Double fx:value="-60.0" />
     </points>
   </Polygon>

    <HBox>
        <Button text="start" onAction="#onStart"/>
        <Button text="stop" onAction="#onStop"/>
    </HBox>

</AnchorPane>
